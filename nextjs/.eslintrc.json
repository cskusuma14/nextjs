{
    "plugins": ["simple-import-sort"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error"
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
    },
    "extends": ["sznm/react", "plugin:@next/next/recommended"]
}
